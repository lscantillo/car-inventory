<div class="row">
  <div class="col-lg-12">
    <div class="card p-5">
      <%= form_with model: @car do |f| %>
        <% if @car.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @car.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control", placeholder: 'car name...' %>
        </div>
        <div class="form-group">
          <%= f.label :year, "Year" %>
          <%= f.text_field :year, class: "form-control", placeholder: '2009' %>
        </div>
        <div class="form-group">
          <%= f.label :brand, "Brand" %>
          <%= f.text_field :brand, class: "form-control", placeholder: 'brand...' %>
        </div>
        <div class="form-group">
          <%= f.label :price, "Price" %>
          <%= f.text_field :price, class: "form-control", placeholder: 'car name...' %>
        </div>
        <div class="form-group">
          <%= f.label :state, "Condition" %>
          <%=  f.select :state, Car.states.keys.to_a.map { |w| [w.humanize, w] }, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Dealer" %><br />
          <%= f.collection_check_boxes :dealer_ids, Dealer.all, :id, :name do |d| %>
            <div class="collection-check-box">
              <%= d.check_box %>
              <%= d.label %>
            </div>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
