<div class="row">
  <div class="col-lg-12">
    <div class="card p-5">
      <%= form_with model: @dealer do |f| %>
        <% if @dealer.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @dealer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control", placeholder: 'Dealer name...' %>
        </div>
        <div class="form-group">
          <%= f.label :location, "Location" %>
          <%= f.text_field :location, class: "form-control", placeholder: 'Colorado Springs' %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
